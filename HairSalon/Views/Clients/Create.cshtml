@model HairSalon.Models.Client

<h3>Add a new client:</h3>
@using (Html.BeginForm())
{

  <p>@Html.LabelFor(model => model.FirstName)
  @Html.TextBoxFor(model => model.FirstName)</p>
  
  <p>@Html.LabelFor(model => model.LastName)
  @Html.TextBoxFor(model => model.LastName)</p>
  
  @Html.LabelFor(model => model.ColorFormula)
  @Html.TextBoxFor(model => model.ColorFormula)

  <p>@Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")</p>
  
  <p><input type="submit" value="Add new client" class="btn btn-default" /></p>
}
<p>@Html.ActionLink("Show all clients", "Index")</p>